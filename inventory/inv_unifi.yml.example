# This folder should have a *_unifi.yml file if you wish to use the unifi inventory plugin
plugin: unifi_plugin
controller_api: https://<unifi-controller-address-here>/proxy/network/api
controller_login: https://<unifi-controller-address-here>/api/auth/login
controller_site: default
macfile: "./inventory/hosts_by_mac.json"
# ansible-vault encrypt_string '<string_to_encrypt>' --name '<string_name_of_variable>'
vault_controller_username: !vault |
          $ANSIBLE_VAULT;1.1;AES256
          yourvaultedusernamehere
vault_controller_password: !vault |
          $ANSIBLE_VAULT;1.1;AES256
          yourvaultedpasswordhere
